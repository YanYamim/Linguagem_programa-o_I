<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.arquiteturapokemon.Controller">

    <Label text="Nome do Pokémon:" layoutX="10" layoutY="10"/>
    <TextField fx:id="nomeTextField" layoutX="120" layoutY="10"/>

    <Label text="Tipo do Pokémon:" layoutX="10" layoutY="70"/>
    <TextField fx:id="tipoTextField" layoutX="120" layoutY="70"/>

    <Label text="Cor do Pokémon:" layoutX="10" layoutY="40"/>
    <TextField fx:id="corTextField" layoutX="120" layoutY="40"/>

    <Label text="Habitat do Pokémon:" layoutX="10" layoutY="100"/>
    <TextField fx:id="habitatTextField" layoutX="120" layoutY="100"/>

    <Button text="Submeter" layoutX="10" layoutY="130" onAction="#gerarFrase"/>

    <Label fx:id="fraseLabel" layoutX="10" layoutY="160"/>

    <ImageView fx:id="imageView" layoutX="10" layoutY="200"/>

</AnchorPane>
